<div class="container">

  <div class="row mt-5">
    <div class="col-12">
      <h2><mark class="bg-secondary text-light">コメント編集</mark></h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12 text-center">
      <%= form_with model:@post_comment, url: post_post_comment_path(@post_comment.post, @post_comment), method: :patch, local: true do |f| %>

        <div class="row text-left offset-2">
          <div class="col-md-4 post-item"><%= f.label :title, "タイトル" %></div>
          <div class="col-md-6 post-form">
            <%= f.text_field :title, :placeholder =>"例)クリスマスシーズンの東京タワー", size: 50 %>
            <% if @post_comment.errors.include?(:title) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:title).first %>
            <% end %>
          </div>
        </div>
        <div class="row text-left offset-2">
          <div class="col-md-4 post-item"><%= f.label :comment, "コメント" %></div>
          <div class="col-md-6 post-form">
            <%= f.text_area :comment, :placeholder =>"例)クリスマスシーズンの東京タワーは色がクリスマスカラーに変わります！", size: "50x3" %>
            <% if @post_comment.errors.include?(:comment) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:comment).first %>
            <% end %>
          </div>
        </div>
        <div class="row text-left offset-2">
          <div class="col-md-4 post-item"><%= f.label :comment_image, "コメント画像" %></div>
          <div class="col-md-6 post-form">
            <%= f.file_field :comment_image, accept: "image/*" %>
          </div>
        </div>

        <div class="row d-flex text-left  offset-2">
          <div class="col-md-4 post-item"><%= f.label :confession_result, "告白結果" %></div>
          <div class="col-md-6 d-flex post-form">
            <div class="mr-4">
              <%= f.radio_button :confession_result, PostComment.confession_results.key(0) %>
              <%= f.label :confession_result, PostComment.confession_results_i18n[:yes] %>
              <i class="fa-solid fa-heart" style="color: red;"></i>
            </div>
            <div class="mr-4">
              <%= f.radio_button :confession_result, PostComment.confession_results.key(1) %>
              <%= f.label :confession_result, PostComment.confession_results_i18n[:no] %>
              <i class="fa-solid fa-heart-crack" style="color: red;"></i>
            </div>
            <div>
              <%= f.radio_button :confession_result, PostComment.confession_results.key(2) %>
              <%= f.label :confession_result, PostComment.confession_results_i18n[:no_answer] %>
              <i class="fa-solid fa-chess-knight" style="color: red;"></i>
            </div>
          </div>
          <% if @post_comment.errors.include?(:confession_result) %>
            <p style="color: red;"><%= @post_comment.errors.full_messages_for(:confession_result).first %>
          <% end %>
        </div>

        <div class="row d-flex text-left  offset-2">
          <div class="col-md-4 post-item"><%= f.label :atmosphere_rate, "雰囲気" %></div>
          <div class="col-md-6 star_atmosphere_rate post-form" data-score="<%= @post_comment.atmosphere_rate %>">
              <%= f.hidden_field :atmosphere_rate %>
            <% if @post_comment.errors.include?(:atmosphere_rate) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:atmosphere_rate).first %>
            <% end %>
          </div>
        </div>

        <div class="row d-flex text-left  offset-2">
          <div class="col-md-4 post-item"><%= f.label :few_people_rat, "人の少なさ" %></div>
          <div class="col-md-6 star_few_people_rate post-form" data-score="<%= @post_comment.few_people_rate %>">
            <%= f.hidden_field :few_people_rate %>
            <% if @post_comment.errors.include?(:few_people_rate) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:few_people_rate).first %>
            <% end %>
          </div>
        </div>

        <div class="row d-flex text-left  offset-2">
          <div class="col-md-4 post-item"><%= f.label :standard_rate, "定番度" %></div>
          <div class="col-md-6 star_standard_rate post-form" data-score="<%= @post_comment.standard_rate %>">
            <%= f.hidden_field :standard_rate %>
            <% if @post_comment.errors.include?(:standard_rate) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:standard_rate).first %>
            <% end %>
          </div>
        </div>

        <div class="row d-flex text-left  offset-2">
          <div class="col-md-4 post-item"><%= f.label :all_rate, "総合評価" %></div>
          <div class="col-md-6 star_all_rate post-form" data-score="<%= @post_comment.all_rate %>">
            <%= f.hidden_field :all_rate %>
            <% if @post_comment.errors.include?(:all_rate) %>
              <p style="color: red;"><%= @post_comment.errors.full_messages_for(:all_rate).first %>
            <% end %>
          </div>
        </div>

        <div class="mt-3">
          <%= f.submit "変更", class: "btn btn-success", style: "width: 150px;" %>
          <%= link_to "削除", post_post_comment_path(@post_comment.post, @post_comment),  method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger ml-3", style: "width: 150px;"  %>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    <% ["atmosphere_rate","few_people_rate","standard_rate","all_rate"].each do |rate| %>
      $('.star_<%= rate %>').empty();
      $('.star_<%= rate %>').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post_comment[<%= rate %>]',
        half: true,
      })
    <% end %>
  </script>

</div>


