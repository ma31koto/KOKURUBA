<div class="container">

  <div class="row">
    <div class="col-md-12 mt-5 heading-ja">
      <h2><mark class="bg-secondary text-light"><i class="fa-solid fa-user-plus mr-2"></i>会員登録</mark></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mt-5">
      <div class="ml-5">
        <p><mark class="bg-secondary text-light">・会員でない方はこちらから会員登録</mark></p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mt-md-5 mb-2">
            <%= f.label :name, "名前", class: "col-md-3 col-12"%>
            <%= f.text_field :name, autofocus: true, :placeholder =>"例：東京太郎", size: 30 %>
            <% if @customer.errors.include?(:name) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:name).first %></p>
            <% end %>
          </div>
          <div class="mb-2">
            <%= f.label :email, "メールアドレス", class: "col-md-3 col-12" %>
            <%= f.email_field :email, :placeholder =>"例：sample@example.com", size: 30 %>
            <% if @customer.errors.include?(:email) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:email).first %></p>
            <% end %>
          </div>
          <div class="mb-2">
            <%= f.label :gender, "性別", class: "col-md-3 col-12" %>
            <%= f.radio_button :gender, Customer.genders.key(0) %>
            <%= f.label :gender, Customer.genders_i18n[:man], class: "mr-3", checked: true %>

            <%= f.radio_button :gender, Customer.genders.key(1) %>
            <%= f.label :gender, Customer.genders_i18n[:woman], class: "mr-3" %>

            <%= f.radio_button :gender, Customer.genders.key(2) %>
            <%= f.label :gender, Customer.genders_i18n[:another], class: "mr-3" %>

            <%= f.radio_button :gender, Customer.genders.key(3) %>
            <%= f.label :gender, Customer.genders_i18n[:no_answer] %>
            <% if @customer.errors.include?(:gender) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:gender).first %></p>
            <% end %>
          </div>
          <div class="mb-2">
            <%= f.label :age, "年齢", class: "col-md-3 col-12" %>
            <%= f.text_field :age, autofocus: true, :placeholder =>"例：27", size: 10 %>歳
            <% if @customer.errors.include?(:age) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:age).first %></p>
            <% end %>
          </div>
          <div class="mb-2">
            <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)", class: "col-md-3 col-12" %>
            <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
            <% if @customer.errors.include?(:password) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:password).first %></p>
            <% end %>
          </div>
          <div class="mb-2">
            <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-3 col-12" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
            <% if @customer.errors.include?(:password) %>
              <p style="color: red;" class="offset-3"><%= @customer.errors.full_messages_for(:password).first %></p>
            <% end %>
          </div>
          <div class="mb-2">

            <%= f.submit "新規登録", class: "btn btn-success  offset-md-3" %>
        <% end %>

        <div class="mt-5">
          <p><mark class="bg-secondary text-light">・既に登録済みの方</mark></p>
          <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
        </div>
      </div>
    </div>
  </div>

</div>