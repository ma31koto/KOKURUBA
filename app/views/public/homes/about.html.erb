  <div class="row">
    <div class="col-12 mt-5">
      <h1>【About】</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= image_tag 'KOKURUBA_logo', size: "230x230", class: "ml-5" %>
    </div>
    <div class="col-8">
      <h2 class="mt-5 ml-5 home">
        <i class="fa-solid fa-heart mr-2" style="color: red;"></i>
        <strong>KOKURUBA</strong>
        <span class="ml-3">＜告る場＞とは…?</span>
