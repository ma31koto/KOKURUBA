<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-5">
      <h2><mark class="bg-secondary text-light">ログイン</mark></h2>

　　　<div class="ml-5">
　　　  <p><mark class="bg-secondary text-light">・会員の方はこちらからログイン</mark></p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-2">
            <%= f.label :email, "メールアドレス", class: "col-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"sample@example.com", class: "col-5"%>
          </div>
          <div class="mb-2">
            <%= f.label :password, "パスワード", class: "col-2"%>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-5"%>
          </div>

          <%= f.submit "ログイン", class: "btn btn-primary offset-2"%>
        <% end %>

        <div class="mt-5">
          <p><mark class="bg-secondary text-light">・会員登録がお済みでない方</mark></p>
          <p><%= link_to "こちら", new_customer_registration_path %>からログインしてください。</p>
        </div>
      </div>

    </div>
  </div>
</div>