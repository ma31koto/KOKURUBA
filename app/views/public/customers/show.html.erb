<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mt-5">
      <h2>
        <mark class="bg-secondary text-light">
        <% if @customer == current_customer %>
          My Page
        <% else %>
          <%= @customer.name %>さんのPage
        <% end %>
        </mark>
      </h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-3">
      <div class="ml-5 d-flex flex-wrap">
        <div class="mx-auto">
          <%= image_tag @customer.get_profile_image, size: "150x150" %>
        </div>
        <div class="mx-auto mt-3">
          <% if @customer == current_customer %>
            <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>
          <% elsif current_customer.following?(@customer) %>
            <%= link_to "フォロー外す", customer_relationship_path(@customer), method: :delete, class: "btn btn-danger" %>
          <% elsif %>
            <%= link_to 'フォローする', customer_relationships_path(@customer), method: :post, class: "btn btn-primary"  %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-3">
      <div class="ml-5">
        名前：<%= @customer.name %><br/>
        性別：<%= @customer.gender_i18n %><br/>
        年齢：<%= @customer.age %>歳<br/>
        <div class="mt-3">
          <%= link_to customer_followings_path(@customer) do %>
            <%= @customer.followings.count %> フォロー<br/>
          <% end %>
          <%= link_to customer_followers_path(@customer) do %>
            <%= @customer.followers.count %> フォロワー<br/>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="offset-1">
        <%= @customer.biography %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h3 class="mt-5 ml-2 mb-3">スポット/コメント投稿一覧</h3>
      <div class="mt-3 ml-4 customer-list">
        <ul class="tab-list">
          <li class="tab tab-active">スポット一覧　<%= @customer.posts.count %>件</li>
          <li class="tab ">コメント一覧　<%= @customer.post_comments.count %>件</li>
        </ul>

        <div class="tabbox-contents">
          <div class="tabbox box-show">
            <div class="mx-auto">
              <table class="table">
                <thead>
                  <tr>
                    <th width="16%" class="text-center align-middle"></th>
                    <th width="16%" class="text-center align-middle">スポット名</th>
                    <th width="16%" class="text-center align-middle">エリア</th>
                    <th width="16%" class="text-center align-middle">関連タグ</th>
                    <th width="17%" class="text-center align-middle">総合評価</th>
                    <th width="16%" class="text-center align-middle">告白成功率</th>
                  </tr>
                </thead>
                <tbody>
                  <% @customer.posts.each do |post| %>
                  <tr>
                    <td class="text-center align-middle">
                      <%= link_to post_path(post) do %>
                        <%= image_tag post.get_spot_image, size: "100x100" %>
                      <% end %>
                    </td>
                    <td class="text-center align-middle">
                      <%= link_to post_path(post) do %>
                        <%= post.title %>
                      <% end %>
                    </td>
                    <td class="text-center align-middle"><%= post.area.name %></td>
                    <td class="align-middle">
                      <% post.tags.each do |tag| %>
                        <%= tag.name %><br/>
                      <% end %>
                    </td>
                    <td class="align-middle">
                      <h3><%= post.avg_all_rate.round(1).to_f %></h3>
                      <div class="d-flex flex-wrap">
                        <div class="star mr-2" data-score="<%= post.avg_all_rate %>"></div>
                        <div>(<i class="fa-solid fa-comment-dots"></i><%= post.post_comments.count + 1 %>件)</div>
                      </div>
                    </td>
                    <td class="text-center align-middle">
                      <% unless post.avg_confession_result %>
                        未回答
                      <% else %>
                        <%= post.avg_confession_result %>％
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="tabbox ml-5">
            <% @customer.post_comments.each do |post_comment| %>
              <div class="d-flex flex-wrap mt-4">
                <div style="width: 200px;, height: 200px;">
                  <%= image_tag post_comment.get_comment_image, size: "100x100" %><br/>
                  <%= post_comment.post.area.name %><br/>
                  <%= link_to admin_post_path(post_comment.post) do %>
                    投稿元スポットへ<i class="fa-solid fa-right-to-bracket"></i>
                  <% end %>
                </div>
                <div>
                  <div class="d-flex flex-wrap" style="height: 30px;">
                    <div style="width: 100px;"><p>総合評価</p></div>
                    <div><%= post_comment.all_rate.round(1).to_f %></div>
                    <div class="star" data-score="<%= post_comment.all_rate %>"></div>
                  </div>
                  <div class="d-flex flex-wrap" style="height: 30px;">
                    <div style="width: 100px;"><p>雰囲気</p></div>
                    <div><%= post_comment.atmosphere_rate.round(1).to_f %></div>
                    <div class="star" data-score="<%= post_comment.atmosphere_rate %>"></div>
                  </div>
                  <div class="d-flex flex-wrap" style="height: 30px;">
                    <div style="width: 100px;"><p>人の少なさ</p></div>
                    <div><%= post_comment.few_people_rate.round(1).to_f %></div>
                    <div class="star" data-score="<%= post_comment.few_people_rate %>"></div>
                  </div>
                  <div class="d-flex flex-wrap" style="height: 30px;">
                    <div style="width: 100px;"><p>定番度</p></div>
                    <div><%= post_comment.standard_rate.round(1).to_f %></div>
                    <div class="star" data-score="<%= post_comment.standard_rate %>"></div>
                  </div>
                </div>
                <div class="ml-5">
                  <h5><strong><%= post_comment.title %></strong></h5>
                  <%= post_comment.comment %>
                </div>
                <div class="float-right">
                  <% if @customer = current_customer %>
                    <%= link_to "編集する", edit_post_post_comment_path(post_comment.customer, post_comment), class: "btn btn-success" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    $(function() {
      $('.tab').click(function(){
        $('.tab-active').removeClass('tab-active');
        $(this).removeClass('tab-mouseover');
        $(this).addClass('tab-active');
        $('.box-show').removeClass('box-show');
        const index = $(this).index();
        $('.tabbox').eq(index).addClass('box-show');
      });

      $('.tab').mouseover(function() {
        var classes = $(this).attr('class').split(" ");
        if (classes.includes("tab-active") == true) { return; }
        $(this).addClass('tab-mouseover');
      });

      $('.tab').mouseout(function() {
        $(this).removeClass('tab-mouseover');
      });
    });

    $('.star').empty();
    $('.star').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
    });

  </script>

</div>
