<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mt-5">
      <h2><mark class="bg-secondary text-light">コメント一覧</mark></h2>

      <div class="mt-5">
        <%= search_form_for(@q, url: post_comments_list_admin_posts_path) do |f| %>
          <%= f.label :title, "タイトル" %>
          <%= f.search_field :title_cont, :placeholder =>"例：東京タワー"%>
          <%= f.label :comment, "x コメント", :placeholder =>"例：夜景" %>
          <%= f.search_field :comment_cont %>
          <%= f.submit "検索" %>
        <% end %>

        <div class="d-flex flex-wrap">
          並び替え
          <div class"ranking-tab"><%= sort_link(@q, :created_at, "新着", default_order: :desc)%></div>
          <div class"ranking-tab"><%= sort_link(@q, :all_rate, "総合評価", default_order: :desc) %></div>
          <div class"ranking-tab"><%= sort_link(@q, :atmosphere_rate, "雰囲気", default_order: :desc) %></div>
          <div class"ranking-tab"><%= sort_link(@q, :few_people_rate, "人の少なさ", default_order: :desc) %></div>
          <div class"ranking-tab"><%= sort_link(@q, :standard_rate, "定番度", default_order: :desc) %></div>
        </div>

        <div class="mx-auto mt-5">
          <table class="table-bordered">
            <thead>
              <tr  style="height: 50px; background-color: #666633;" class="text-center align-middle">
                <th width="13%"></th>
                <th width="7%">投稿者</th>
                <th width="10%">総合評価</th>
                <th width="10%">雰囲気</th>
                <th width="10%">人の少なさ</th>
                <th width="10%">定番度</th>
                <th width="10%">コメント</th>
                <th width="10%">告白結果</th>
                <th width="10%">投稿日</th>
                <th width="10%"></th>
              </tr>
            </thead>
            <tbody>
              <% @post_comments.each do |post_comment| %>
              <tr>
                <td>
                  <div class="ml-2 align-middle">
                    <%= image_tag post_comment.get_comment_image, size: "120x70" %></br>
                    <%= post_comment.title %>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.customer.name %>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.all_rate.round(1).to_f %>
                    <div class="star" data-score="<%= post_comment.all_rate %>"></div>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.atmosphere_rate.round(1).to_f %>
                    <div class="star" data-score="<%= post_comment.atmosphere_rate %>"></div>
                  </dvi>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.few_people_rate.round(1).to_f %>
                    <div class="star" data-score="<%= post_comment.few_people_rate %>"></div>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.standard_rate.round(1).to_f %>
                    <div class="star" data-score="<%= post_comment.standard_rate %>"></div>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.comment %>
                  </div>
                </td>
                <td>
                  <div class="ml-4">
                    <%= post_comment.confession_result_i18n %>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
                  </div>
                </td>
                <td>
                  <div class="ml-2">
                    <%= link_to "編集する", edit_admin_post_post_comment_path(post_comment.post, post_comment), class: "btn btn-success" %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @post_comments %>
        </div>
      </div>

      <script>
        $('.star').empty();
        $('.star').raty({
          size: 20,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
        });
      </script>

    </div>
  </div>
</div>