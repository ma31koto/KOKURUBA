<div class="container">
  <div class="row">
    <div class="col-12 mt-5 heading-ja">
      <h2><mark class="bg-secondary text-light"><i class="fa-solid fa-comment-dots mr-2"></i>コメント一覧</mark></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-5">
      <%= search_form_for(@q, url: post_comments_list_admin_posts_path) do |f| %>
        <%= f.label :title, "タイトル" %>
        <%= f.search_field :title_cont, :placeholder =>"例：東京タワー"%>
        <i class="fa-solid fa-x ml-1 mr-1"></i>
        <%= f.label :comment, "コメント", :placeholder =>"例：夜景" %>
        <%= f.search_field :comment_cont %>
        <%= f.submit "検索" %>
      <% end %>

      並び替え
      <%= sort_link(@q, :created_at, "新着", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>
      <%= sort_link(@q, :all_rate, "総合評価", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>
      <%= sort_link(@q, :atmosphere_rate, "雰囲気", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>
      <%= sort_link(@q, :few_people_rate, "人の少なさ", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>
      <%= sort_link(@q, :standard_rate, "定番度", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>
      <%= sort_link(@q, :confession_result, "告白結果", default_order: :desc, class: "btn btn-sm rounded-pill ml-1", style: "border: 2px solid #666600; color: white; width:110px;") %>

      <div class="mx-auto mt-5">
        <table class="table-bordered">
          <thead>
            <tr  style="height: 50px; background-color: #666633;" class="text-center align-middle">
              <th width="13%"></th>
              <th width="10%">総合評価</th>
              <th width="10%">雰囲気</th>
              <th width="10%">人の少なさ</th>
              <th width="10%">定番度</th>
              <th width="15%">コメント</th>
              <th width="7%">告白結果</th>
              <th width="7%">投稿日</th>
              <th width="7%"></th>
            </tr>
          </thead>
          <tbody style="background-color: #262626;">
            <% @post_comments.each do |post_comment| %>
            <tr>
              <td>
                <%= image_tag post_comment.get_comment_image, size: "120x70" %></br>
                <%= post_comment.title %>
                <div>
                  <%= link_to admin_post_path(post_comment.post) do %>
                    スポット元へ<i class="fa-solid fa-right-to-bracket"></i>
                  <% end %>
                </div>
              </td>
              <td>
                <h5><%= post_comment.all_rate.round(1).to_f %></h5>
                <div class="star" data-score="<%= post_comment.all_rate %>"></div>
              </td>
              <td>
                <h5><%= post_comment.atmosphere_rate.round(1).to_f %></h5>
                <div class="star" data-score="<%= post_comment.atmosphere_rate %>"></div>
              </td>
              <td>
                <h5><%= post_comment.few_people_rate.round(1).to_f %></h5>
                <div class="star" data-score="<%= post_comment.few_people_rate %>"></div>
              </td>
              <td>
                <h5><%= post_comment.standard_rate.round(1).to_f %></h5>
                <div class="star" data-score="<%= post_comment.standard_rate %>"></div>
              </td>
              <td>
                <div>
                  <%= link_to admin_customer_path(post_comment.customer), class: "link-white" do %>
                    ●投稿者：<%= post_comment.customer.name %>
                  <% end %>
                </div>
                <%= post_comment.comment %>
              </td>
              <td>
                <%= post_comment.confession_result_i18n %>
              </td>
              <td>
                <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                <%= link_to "編集", edit_admin_post_post_comment_path(post_comment.post, post_comment), class: "btn btn-success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @post_comments %>
      </div>
    </div>
  </div>

  <script>
    $('.star').empty();
    $('.star').raty({
      size: 20,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
    });
  </script>

</div>