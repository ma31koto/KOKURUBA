<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2>会員一覧</h2>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>プロフィール画像</th></th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= image_tag customer.get_profile_image, size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <%if customer.is_deleted == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-danger">退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

