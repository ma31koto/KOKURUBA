<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2>会員編集</h2>

      <%= form_with model:@customer, url:admin_customer_path(@customer), method: :patch, local: true do |f| %>
        <table>
          <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :profile_image, "プロフィール写真" %></td>
              <td><%= f.file_field :profile_image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "名前" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :gender, "性別" %></td>
              <td>
                <%= f.radio_button :gender, Customer.genders.key(0) %>
                <%= f.label :gender, Customer.genders_i18n[:man] %>

                <%= f.radio_button :gender, Customer.genders.key(1) %>
                <%= f.label :gender, Customer.genders_i18n[:woman] %>

                <%= f.radio_button :gender, Customer.genders.key(2) %>
                <%= f.label :gender, Customer.genders_i18n[:another] %>

                <%= f.radio_button :gender, Customer.genders.key(3) %>
                <%= f.label :gender, Customer.genders_i18n[:no_answer] %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :age, "年齢" %></td>
              <td><%= f.text_field :age %>歳</td>
            </tr>
            <tr>
              <td><%= f.label :biography, "自己紹介" %></td>
              <td><%= f.text_area :biography %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :is_deleted, "会員ステータス" %></td>
              <td>
                <%= f.radio_button :is_deleted, 'false' %>
                <%= f.label :is_deleted, '有効', value: false %>
                <%= f.radio_button :is_deleted, 'true' %>
                <%= f.label :is_deleted, '退会', value: true %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= f.submit "変更", class: "btn btn-sm btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>