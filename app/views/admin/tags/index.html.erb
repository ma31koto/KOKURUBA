<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">

    <h2>タグ一覧・追加</h2>
    <%= render 'form', tag: @tag %>

    <table>
      <thead>
        <tr>
          <th>タグ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= link_to "編集する", edit_admin_tag_path(tag), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>
